<body>

<div class="container">
    <h2>Student Attendance Calculator</h2>
    
    <label>Student Name</label>
    <input type="text" id="name">
    
    <label>Month</label>
    <input type="month" id="month">
    
    <label>Total Days</label>
    <input type="number" id="totalDays">
    
    <label>Attended Days</label>
    <input type="number" id="attendedDays">
    
    <button onclick="calculateAttendance()">CALCULATE</button>
    
    <div class="result" id="result"></div>
</div>
<script>
function calculateAttendance() {
    let total = parseFloat(document.getElementById("totalDays").value);
    let attended = parseFloat(document.getElementById("attendedDays").value);
    let name = document.getElementById("name").value;
    let month = document.getElementById("month").value;

    if (!total || !attended || attended > total) {
        document.getElementById("result").innerHTML = "Invalid input!";
        return;
    }

    let percentage = (attended / total) * 100;
    document.getElementById("result").innerHTML = 
        name + " (" + month + "): " + percentage.toFixed(2) + "% attendance";
}
</script>
