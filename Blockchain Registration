  <div class="container">
    <h2>Register New Student</h2>
    <form id="registerForm">
      <div>
        <label for="name">Student Name</label>
        <input type="text" id="name" required>
      </div>
      <div>
        <label for="gmail">Gmail</label>
        <input type="email" id="gmail" required>
